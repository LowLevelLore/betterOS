{
  "configurations": [
    {
      "name": "linux-gcc-x86",
      "includePath": [
        "${workspaceFolder}/include/**",
        "${workspaceFolder}/include/basics",
        "${workspaceFolder}/include/hardware",
        "${workspaceFolder}/include/drivers",
        "${workspaceFolder}/include/lib"
      ],
      "compilerPath": "/usr/bin/x86_64-elf-g++",
      "cStandard": "c23",
      "cppStandard": "c++23",
      "intelliSenseMode": "gcc-x86",
      "compilerArgs": [
        "-m32",   // Ensure 32-bit compatibility
        "-nostdlib",
        "-fno-builtin",
        "-fno-rtti",
        "-fno-exceptions",
        "-Wno-write-strings"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}/include",
          "${workspaceFolder}/include/basics",
          "${workspaceFolder}/include/hardware",
          "${workspaceFolder}/include/drivers",
          "${workspaceFolder}/include/lib"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}
